<?xml version="1.0" encoding="utf-8"?>
<!--
################################################################################
#
#                               HUD CONFIGURATION
#
################################################################################

see :
- http://wiki.flightgear.org/Head-up_display
- http://wiki.flightgear.org/Canvas_HUD
-->

<PropertyList>

  <enable3d>true</enable3d>
<!--
================================================================================
                                                                          LADDER
================================================================================
-->
<!-- ~~~~~~~~~~~~~~~~~~ ladder 5 for VFR mode -->
  <ladder>
    <name>Pitch Ladder VFR</name>
    <type>pitch</type>
    <x>-40</x>
    <y>-25</y>
    <width>80</width>
    <height>35</height>
    <roll-input>
      <property>/orientation/roll-deg</property>
    </roll-input>
    <pitch-input>
      <property>/orientation/pitch-deg</property>
    </pitch-input>
    <compression-factor>8</compression-factor>
    <display-span>10</display-span>
    <divisions>5.0</divisions>
    <screen-hole>6</screen-hole>
    <tick-length>4</tick-length>
    <zero-bar-overlength>30</zero-bar-overlength>
    <enable-dive-bar-angle>true</enable-dive-bar-angle>
    <enable-dynamic-origin>false</enable-dynamic-origin>
    <enable-fuselage-ref-line>true</enable-fuselage-ref-line>
    <enable-target-spot>false</enable-target-spot>
    <enable-target-markers>true</enable-target-markers>
    <enable-velocity-vector>true</enable-velocity-vector>
    <enable-drift-marker>false</enable-drift-marker>
    <enable-alpha-bracket>false</enable-alpha-bracket>
    <enable-energy-marker>true</enable-energy-marker>
    <enable-climb-dive-marker>false</enable-climb-dive-marker>
    <enable-glide-slope-marker>true</enable-glide-slope-marker>
    <glide-slope>0.0</glide-slope>
    <enable-energy-worm>false</enable-energy-worm>
    <enable-waypoint-marker>true</enable-waypoint-marker>
    <enable-zenith>false</enable-zenith>
    <enable-nadir>false</enable-nadir>
  </ladder>

<!--
================================================================================
                                                             TURN BANK INDICATOR
================================================================================
-->
<!-- ~~~~~~~~~~~~~~~~~~ tbi -->
  <turn-bank-indicator>
    <name>Turn Indicator</name>
    <x>-40</x>
    <y>-115</y>
    <width>80</width>
    <height>80</height>
    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>
    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>
    <bank-scale>true</bank-scale>
    <option>bottom</option>
  </turn-bank-indicator>


<!--
================================================================================
                                                                     AP SETTINGS
================================================================================
-->

  <label>
    <name>master</name>
    <x>-125</x>
    <y>34</y>
    <width>60</width>
    <height>10</height>
    <input>
      <property>/sim/presets/my-master-callsign</property>
    </input>
    <halign>left</halign>
    <box>false</box>
  </label>
  <label>
    <name>master</name>
    <x>-125</x>
    <y>24</y>
    <width>60</width>
    <height>10</height>
    <input>
      <property>/sim/presets/my-master-callsign</property>
    </input>
    <halign>left</halign>
    <box>false</box>
  </label>

  <label>
    <name>AP Speed Label top</name>
    <x>-65</x>
    <y>28</y>
    <width>50</width>
    <height>16</height>
    <input>
      <property>/autopilot/settings/target-speed-kt</property>
    </input>
    <format>%3.0f kt</format>
    <halign>center</halign>
    <box>true</box>
  </label>

  <label>
    <name>AP Heading Label top</name>
    <x>-15</x>
    <y>28</y>
    <width>30</width>
    <height>16</height>
    <input>
      <property>/autopilot/settings/heading-bug-deg</property>
    </input>
    <format>%3.0f</format>
    <halign>center</halign>
    <box>true</box>
  </label>

  <label>
    <name>AP Alt Label top</name>
    <x>15</x>
    <y>28</y>
    <width>50</width>
    <height>16</height>
    <input>
      <property>/autopilot/settings/target-altitude-ft</property>
    </input>
    <format>%3.0f ft</format>
    <halign>center</halign>
    <box>true</box>
  </label>

<!--
================================================================================
                                                                           INFOS
================================================================================
-->
<!-- ~~~~~~~~~~~~~~~~~~ heading top center -->
  <label>
    <name>Heading Label top</name>
    <x>-9</x>
    <y>15</y>
    <width>18</width>
    <height>10</height>
    <input>
      <property>/instrumentation/my_aircraft/nd/outputs/indicated-heading</property>
    </input>
    <format>%3.0f</format>
    <halign>center</halign>
    <box>false</box>
  </label>

<!-- ~~~~~~~~~~~~~~~~~~ airspeed -->
  <label>
    <name>KIAS</name>
    <x>-130</x>
    <y>-75</y>
    <width>40</width>
    <height>10</height>
    <input>
      <property>/instrumentation/airspeed-indicator/true-speed-kt</property>
    </input>
    <format>%4.0fkt</format>
    <halign>right</halign>
    <box>false</box>
  </label>
  <label>
    <name>MACH Number</name>
    <input>
      <property>/velocities/mach</property>
    </input>
    <x>-130</x>
    <y>-90</y>
    <width>40</width>
    <height>10</height>
    <format>%4.2fM</format>
    <halign>right</halign>
  </label>

<!-- ~~~~~~~~~~~~~~~~~~ alt -->
  <label>
    <name>Altitude</name>
    <x>80</x>
    <y>-75</y>
    <width>40</width>
    <height>10</height>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <format>%6.0fft</format>
    <halign>left</halign>
    <box>false</box>
  </label>
  <label>
    <name>flight level</name>
    <x>80</x>
    <y>-90</y>
    <width>40</width>
    <height>8</height>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <factor>0.01</factor>
    </input>
    <format>FL %3.0f</format>
    <halign>left</halign>
    <box>false</box>
  </label>
  <label>
    <name>vspeed</name>
    <x>80</x>
    <y>-105</y>
    <width>40</width>
    <height>10</height>
    <input>
      <property>/autopilot/internal/vert-speed-fpm</property>
    </input>
    <format>VS %d fpm</format>
    <halign>left</halign>
    <box>false</box>
  </label>


  <label>
    <name>elevationOk</name>
    <x>0</x>
    <y>-40</y>
    <halign>center</halign>
    <format>Ralt %4.0fft</format>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <less-than>
          <property>/position/altitude-agl-ft</property>
          <value>5000</value>
        </less-than>
      </or>
    </condition>
  </label>

<!--
================================================================================
                                                                        COMMANDS
================================================================================
-->

<!-- ~~~~~~~~~~~~~~~~~~ throttle 0 -->
  <gauge>
    <name>throttle0-thumb</name>
    <x>-100</x>
    <y>-130</y>
    <width>5</width>
    <height>20</height>
    <option>vertical</option>
    <option>left</option>
    <option>notext</option>
    <major-divisions>90</major-divisions>
    <input>
      <property>/controls/engines/engine[0]/throttle</property>
      <factor>100</factor>
      <max>100.0</max>
      <min>0.0</min>
    </input>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>VFR</value>
        </equals>
      </or>
    </condition>
  </gauge>
<!-- ~~~~~~~~~~~~~~~~~~ throttle 1 -->
  <gauge>
    <name>throttle1-thumb</name>
    <x>-100</x>
    <y>-130</y>
    <width>5</width>
    <height>20</height>
    <option>vertical</option>
    <option>right</option>
    <option>notext</option>
    <major-divisions>90</major-divisions>
    <input>
      <property>/controls/engines/engine[1]/throttle</property>
      <factor>100</factor>
      <max>100.0</max>
      <min>0.0</min>
    </input>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>VFR</value>
        </equals>
      </or>
    </condition>
  </gauge>

<!--
================================================================================
                                                                  AVIONICS INFOS
================================================================================
-->
<!-- ~~~~~~~~~~~~~~~~~~ angle of attack -->
  <label>
    <name>AoA</name>
    <input>
      <property>/orientation/alpha-deg</property>
    </input>
    <x>-25</x>
    <y>-140</y>
    <width>50</width>
    <height>8</height>
    <halign>center</halign>
    <format>AoA %3.1f</format>
    <box>false</box>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>APP</value>
        </equals>
        <and>
          <equals>
            <property>/instrumentation/my_aircraft/nd/controls/mode</property>
            <value>NAV</value>
          </equals>
          <or>
            <greater-than>
              <property>/orientation/alpha-deg</property>
              <value>1.5</value>
            </greater-than>
            <less-than>
              <property>/orientation/alpha-deg</property>
              <value>0</value>
            </less-than>
          </or>
        </and>
        <equals>
          <property>/instrumentation/my_aircraft/nd/controls/mode</property>
          <value>VFR</value>
        </equals>
      </or>
    </condition>
  </label>

<!-- ~~~~~~~~~~~~~~~~~~ gears
  <label>
    <name>Gear</name>
    <x>-56</x>
    <y>-120</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <property>/controls/gear/gear-down</property>
      </or>
    </condition>
    <format>gears</format>
    <halign>right</halign>
  </label> -->

<!-- ~~~~~~~~~~~~~~~~~~ G load -->
  <label>
    <name>G Load</name>
    <x>-120</x>
    <y>-100</y>
    <width>1.5</width>
    <height>1.5</height>
    <input>
      <property>/accelerations/pilot-g</property>
    </input>
    <format>%2.1fg</format>
    <halign>left</halign>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <not>
          <equals>
            <property>/instrumentation/my_aircraft/nd/controls/mode</property>
            <value>TAXI</value>
          </equals>
        </not>
      </or>
    </condition>
  </label>

<!--
================================================================================
                                                               AVIONICS WARNINGS
================================================================================
-->
<!-- ~~~~~~~~~~~~~~~~~~ stall alert -->
  <label>
    <name>Stall Alert</name>
    <x>0</x>
    <y>-25</y>
    <halign>center</halign>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <and>
          <equals>
            <property>/sim/alarms/stall-warning</property>
            <value>2</value>
          </equals>
          <not><property>/gear/gear[0]/wow</property></not>
        </and>
      </or>
    </condition>
    <format>STALLING !</format>
    <blinking>
      <interval>0.1</interval>
    </blinking>
    <halign>left</halign>
  </label>

<!-- ~~~~~~~~~~~~~~~~~~ stall warning -->
  <label>
    <name>Stall Warning</name>
    <x>0</x>
    <y>-25</y>
    <halign>center</halign>
    <condition>
      <or>
        <property>/_debug/instruments/hud_show_all</property>
        <and>
          <equals>
            <property>/sim/alarms/stall-warning</property>
            <value>1</value>
          </equals>
          <not><property>/gear/gear[0]/wow</property></not>
        </and>
      </or>
    </condition>
    <format>STALL WARNING !</format>
    <blinking>
      <interval>0.25</interval>
    </blinking>
    <halign>left</halign>
  </label>

</PropertyList>




