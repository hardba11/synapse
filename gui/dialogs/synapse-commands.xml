<?xml version="1.0" encoding="utf-8"?>
<!--
################################################################################
#
#                      synapse commands dialogbox
#
################################################################################

the dialogbox is autoloaded if in gui/dialog

https://sourceforge.net/p/flightgear/fgdata/ci/next/tree/Docs/README.gui

-->

<PropertyList>

  <name>synapse-commands</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout><empty><stretch>1</stretch></empty>
    <text><label>synapse's commands</label></text>
    <empty><stretch>1</stretch></empty>
    <button><pref-width>16</pref-width><pref-height>16</pref-height><legend />
      <default>1</default><keynum>27</keynum><border>2</border>
      <binding><command>dialog-close</command></binding>
      <binding><command>dialog-apply</command></binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ hippodrome -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Do hippodrome !</label>
    </text>
    <button>
      <row>0</row><col>1</col>
      <legend>Disable</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_toggle_hippodrome(0);
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>0</row><col>2</col>
      <legend>Enable</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_toggle_hippodrome(1);
          ]]>
        </script>
      </binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ smoke from pod -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Smoke</label>
    </text>
    <button>
      <row>0</row><col>1</col>
      <legend>Off</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_smoke(0);
          ]]>
        </script>
      </binding>
    </button>
    <button>
      <row>0</row><col>2</col>
      <legend>Blue</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_smoke(1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/smoking-color</property>
        <value>blue</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>3</col>
      <legend>White</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_smoke(1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/smoking-color</property>
        <value>white</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>4</col>
      <legend>Red</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_smoke(1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/smoking-color</property>
        <value>red</value>
      </binding>
    </button>
  </group>


  <hrule />

</PropertyList>

